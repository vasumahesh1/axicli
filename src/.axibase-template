function copy_from_server {

	if [[ "$4" = /* ]]
	then
	   : # Absolute path
	   scp $1@$2:$4 $5
	else
	   : # Relative path
	   scp $1@$2:$3$4 $5
	fi
}

function copy_to_server {

	if [[ "$5" = /* ]]
	then
	   : # Absolute path
	   scp $4 $1@$2:$5
	else
	   : # Relative path
	   scp $4 $1@$2:$3$5
	fi
}

